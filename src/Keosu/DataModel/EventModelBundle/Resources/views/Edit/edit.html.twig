{% extends 'KeosuCoreBundle:MainViews:content.html.twig' %}

{% block title %}
Edit event
{% endblock %}

{% block content %}

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
{{ tinymce_init() }}
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"></script>
<script type="text/javascript">
	$(document).ready(function() {
		$('.date').datepicker({ dateFormat: 'dd-mm-y' });
		$('#form_hour_hour').parent().width(70);
		$('#form_hour_minute').parent().width(70);
		$('#form_hour_minute').parent().html('<p><label style="float:left; margin-top:5px; margin-right:25px">:</label>'+$('#form_hour_minute').parent().html()+'</p>');
	});
</script>
<script>
function initialize() {
	var input = document.getElementById('form_lieu');
	var options = {
	
	};
	autocomplete = new google.maps.places.Autocomplete(input, options);
	
	google.maps.event.addListener(autocomplete, 'place_changed', function() {
		var coords = autocomplete.getPlace().geometry.location.toString();	// Suppression des parenthèses en trop
		coords = coords.substr(1,coords.length-3);
		lat=document.getElementById('form_latitude');
		lon=document.getElementById('form_longitude');
		lat.value=coords.substr(0,coords.lastIndexOf(',')-1);		
		lon.value=coords.substr(coords.lastIndexOf(',')+2);

	});
	
	
}
google.maps.event.addDomListener(window, 'load', initialize);  
</script>




<div>
	<form method="post" {{ form_enctype(form) }}>
    	{{ form_widget(form) }}
    	<input type="submit" class="btn btn-success" /><a class="confirmModal" href="javascript:history.go(-1);" ><button type="button" class="btn btn-danger">Cancel</button></a>
    </form>
</div>
{% endblock %}
