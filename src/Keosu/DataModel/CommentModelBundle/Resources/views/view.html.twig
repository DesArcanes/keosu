{% extends 'KeosuCoreBundle:MainViews:content.html.twig' %}

	
{% block content %}
<div class="row">
	<div class="col-md-12">
			<fieldset>
				<div class="clearfix">
					<h1 class="pull-left">Comments</h1>
					<a class="right-button pull-right" href="{{ path('keosu_comment_add') }}">
						<button class="btn btn-success" title="Create a comment">
							New comment
						</button>
					</a>
				</div>
				<table class="table table-striped table-hover clearfix" width="100%">
					<thead>
						<tr>
							<th>Date</th>
							<th>Message</th>
							<th>Type</th>
							<th colspan="2"></th>
						</tr>
					</thead>
					<tbody>
					{% for comment in comments %}
						<tr>
							<td>{{ comment.date | date('Y/M/d') }}</td>
							<td>{{ comment.message }}</td>
							<td>{{ comment.dataModelObject }}</td>
							<td><a href={{ path('keosu_comment_edit',{'id':comment.id}) }}><i class='glyphicon glyphicon-edit'></i></a></td>
							<td><a href={{ path('keosu_comment_delete',{'id':comment.id}) }}><i class='glyphicon glyphicon-remove'></i></a></td>
						</tr>
					{% endfor %}
					</tbody>
					<tfoot>
						<tr>
							<th>Date</th>
							<th>Message</th>
							<th>Type</th>
							<th colspan="2"></th>
						</tr>
					</tfoot>
				</table>
			</fieldset>
	</div>
</div>
{% endblock %}
