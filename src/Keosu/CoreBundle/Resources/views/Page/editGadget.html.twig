{% extends 'KeosuCoreBundle:MainViews:page.html.twig' %}

{% block title %}
	Edit gadget
{% endblock %}
{% block content %}
</script>
<h1>Edit gadget</h1>
<br/>
<div>
	<script type="text/javascript">
	$(document).ready(function() {
		$( ".radio" ).each(function( index ) {
			input = $(this).find('input');
			templateName=input.attr('value');
			img='<img alt="'+templateName+'" src="{{url_base}}/{{ gadgetDir }}/'+templateName+'.png"/>';
			$( this ).text("");
			$( this ).append(input);
			$( this ).append(img);
		});
	});
	</script>
	{% block gadgetform %}
    <form method="post" {{ form_enctype(form) }}>
    	{{ form_widget(form) }}
    	    	
    	<input type="submit" class="btn btn-success" /><a class="confirmModal" href="javascript:history.go(-1);" ><button type="button" class="btn btn-danger">Cancel</button></a>
    </form>
    {% endblock %}
    
</div>
{% endblock %}
