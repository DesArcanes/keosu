{% extends 'KeosuCoreBundle:MainViews:configuration.html.twig' %}

{% block title %}
	Edit App
{% endblock %}
{% block configurationmenu %}
	<div class="activesidebartitle">
		<a href="{{ path('keosu_core_app_manage') }}"> 
				<span class="glyphicon glyphicon-cog"></span> 
				Configuration
		</a>
	</div>
{% endblock %}
{% block body %}
	<div class="panel">
		<div class="row">
			<div class="col-md-3">
			</div>
			<div class="col-md-6">
				{% if firstApp%}
					<div class="alert alert-success">
						<strong>Welcome to Keosu!</strong>
						To start, create your first app
						</div>
				{% endif %}
			    <form method="post" {{ form_enctype(form) }}>
			    	{{ form_widget(form) }}
			    	    	
			    	<input type="submit" class="btn btn-success" />
			    	&nbsp;
			    	<a class="confirmModal" href="javascript:history.go(-1);" ><button type="button" class="btn btn-danger">Cancel</button></a>
			    </form>
			 </div>
			 <div class="col-md-3">
			 </div>
		   
		</div>	
	</div>
{% endblock %}