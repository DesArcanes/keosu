{% extends 'KeosuCoreBundle::page.html.twig' %}


{% block pagemenu %}
	<div class="activesidebartitle">
		 <a href="{{ path('keosu_core_page') }}">
				<span class="glyphicon glyphicon-folder-open"></span>
				&nbsp;Pages
		</a>
	</div>
	<a class="sidebarlink" href="{{ path('keosu_core_views_page_manage') }}">
		Manage Pages
	</a>

	<div id="pagelist-result">
		{% for content in app.session.get('pages') %}
			<div>
				<a class="sidebarlink" href="{{ path('keosu_core_views_page',{'id':content.id}) }}">Edit {{ content.name }}</a>
			</div>
		{% endfor %}
	</div>
	<div>&nbsp;</div>
{% endblock %}

		
{% block body %}
	<div id="checklayout">
		<script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$.get('{{path('keosu_core_views_page_check') }}', function(data) {
					$('#checklayout').html(data);
				});
			} );
		</script>
	</div>
	<div id="content">
		<div class="panel">
			{% block content %}
				<div class="dashboard">
				<div class="row">
					<div class="col-md-12">
						<h2>The page part</h2>
						<p>
							The page part is about your application page, articles, readers data, etc...
						</p>
						<p>
							Let your creation guide your mouse
						</p>
					</div>
				</div>	
				<div class="row">
					<div class="col-md-3">
						<div class="wellcustom">
							<h3>page</h3>
							<p>
								A page is a page page, no matter about content for instance, it's only a way to display something (but have an idea of what you want to display :P)
							</p>
							<a href="{{ path('keosu_core_views_page_manage') }}" ><button type="button" class="btn btn-default">Manage pages </button></a>
						</div>				
					</div>
					{% for page in pages %}
						<div class="col-md-3">
							<div class="wellcustom">
								<h3>{{ page.name }}</h3>
								
								<a href="{{ path('keosu_core_views_page',{'id':page.id}) }}"><button type="button" class="btn btn-default">Edit {{ page.name }}</button></a>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
			{% endblock %}
		</div>
	</div>
{% endblock %}