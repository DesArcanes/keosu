{% extends 'KeosuCoreBundle:MainViews:configuration.html.twig' %}
    

{% block body %}

<div class="panel">
	<div class="row">

		<div class="col-md-12">
			<div class="wellcustom">
	    		<fieldset>
	    			<legend>Themes</legend>
	    			
					<a class="btn btn-success" href="{{ path('keosu_core_theme_manage_add') }}">Add new Theme</a>
					<br class="clear"/><br class="clear"/>
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Theme name</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
				 			 {% for theme in themes %}
				   				<tr>
									<td>{{ theme.name }}</td>
									<td>
									</td>
								</tr>
				  			{% endfor %}
				  		</tbody>
						<tfoot>
							<tr>
								<th>Theme name</th>
								<th></th>
							</tr>
						</tfoot>
					</table>
				</fieldset>
			</div>
		</div>
	</div>
</div>
{% endblock %}