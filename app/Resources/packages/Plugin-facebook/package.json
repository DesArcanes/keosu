{
	"name" : "facebookPlugins",
	"description" : "social plugins packages",
	"version" : "0.1",
	"type" : "plugin",
	"configCordova" : [
		{ "gap:plugin" : [
			{ "@attributes" : {"name" : "com.phonegap.plugins.facebookconnect" , "version":"0.9.0"} },
			{ "param" : [
				{ "@attributes" :{"name" : "APP_ID", "value":"@@fbAppId@@"} }
			]},
			{ "param" : [
				{"@attributes" : {"name" : "APP_NAME","value":"@@fbAppName@@"}}
			]}
		]},
		{"gap:plugin":[
			{ "@attributes":{"name":"nl.x-services.plugins.socialsharing","version":"4.3.8"} }
		]}
	],
	"pluginToInstall" : [
		"cordova plugin add https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git"
	],
	"libJs" : [
		"cdv-plugin-fb-connect.js",
		"facebook-js-sdk.js"
	],
	"appParam" : [
		{"name" : "fbAppId" , "type" : "text", "options" : {
         "required" : 0
      	}},
		{"name" : "fbAppName" , "type" : "text", "options" : {
         "required" : 0
      	}},
		{"name" : "fbAppSecret", "type" : "text", "backOfficeOnly": 1, "options" : {
         "required" : 0
      	}}
	]
}









